@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Admin Dashboard</h2>

    <div class="row mb-4 text-center">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text display-6">@ViewBag.UserCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body">
                    <h5 class="card-title">Pending Organizers</h5>
                    <p class="card-text display-6">@ViewBag.PendingOrganizersCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body">
                    <h5 class="card-title">Published Events</h5>
                    <p class="card-text display-6">@ViewBag.PublishedEventsCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body">
                    <h5 class="card-title">Transactions</h5>
                    <p class="card-text display-6">@ViewBag.TransactionsCount</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-primary w-100 p-4">
                <i class="bi bi-people"></i> Manage Users
            </a>
        </div>
        <div class="col-md-6">
            <a asp-controller="Admin" asp-action="PendingOrganizers" class="btn btn-outline-warning w-100 p-4">
                <i class="bi bi-hourglass-split"></i> Pending Organizers
            </a>
        </div>
        <div class="col-md-6">
            <a asp-controller="Auth" asp-action="ResetMyPassword" class="btn btn-outline-danger w-100 p-4">
                <i class="bi bi-shield-lock"></i> Reset Admin Password
            </a>
        </div>
        <div class="col-md-6">
            <a asp-controller="Events" asp-action="Index" class="btn btn-outline-success w-100 p-4">
                <i class="bi bi-calendar-event"></i> View All Events
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
