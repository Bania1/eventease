@model IEnumerable<eventease_app.Models.User>

@{
    ViewData["Title"] = "Pending Organizers";
}

<h2 class="mb-4 text-center">Pending Organizer Approvals</h2>

@if (!Model.Any())
{
    <div class="alert alert-success text-center">
        <strong>All organizers are approved!</strong>
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Registered At</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var organizer in Model)
            {
                <tr>
                    <td>@organizer.Email</td>
                    <td>@organizer.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <form asp-action="ApproveOrganizer" method="post">
                            <input type="hidden" name="id" value="@organizer.Id" />
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="fas fa-check-circle me-1"></i> Approve
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
