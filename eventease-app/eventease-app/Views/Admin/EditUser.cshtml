@model eventease_app.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<h2 class="text-center mb-4">Edit User</h2>

<form asp-action="EditUser" asp-controller="Admin" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PasswordHash" />

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label">New Password (leave blank to keep current)</label>
        <input asp-for="NewPassword" class="form-control" type="password" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Role" class="form-label"></label>
        <select asp-for="Role" class="form-select">
            <option>User</option>
            <option>Organizer</option>
            <option>Admin</option>
        </select>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Approved" class="form-check-input" type="checkbox" />
        <label asp-for="Approved" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary w-100">Save Changes</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
