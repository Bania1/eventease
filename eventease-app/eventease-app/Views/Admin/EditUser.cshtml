@model eventease_app.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<h2 class="mb-4 text-center">Edit User</h2>

<form asp-action="EditUser" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">New Password (leave blank to keep current)</label>
        <input asp-for="PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Role" class="form-label"></label>
        <select asp-for="Role" class="form-control">
            <option value="user" selected="@("user" == Model.Role)">User</option>
            <option value="organizer" selected="@("organizer" == Model.Role)">Organizer</option>
            <option value="admin" selected="@("admin" == Model.Role)">Admin</option>
        </select>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Approved" class="form-check-input" type="checkbox" />
        <label asp-for="Approved" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary w-100">Save Changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
