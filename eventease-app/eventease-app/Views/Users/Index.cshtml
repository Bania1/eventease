@model IEnumerable<eventease_app.Models.User>

@{
    ViewData["Title"] = "Users List";
}

<h2 class="mb-4 text-center">Users</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-user-plus"></i> Create New User
    </a>
</div>

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Approved</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th></th> <!-- Actions -->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    @if (user.Approved)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </td>
                <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@user.UpdatedAt.ToString("yyyy-MM-dd")</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info me-2">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary me-2">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
