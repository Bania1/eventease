@model eventease_app.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}


<div class="card bg-spacegrey mb-5">
    <img src="~/img/@Model.HeroFileName" class="card-img-top" alt="@Model.Theme" style="height:400px;object-fit:cover;">
    <div class="card-body">
        <h2 class="card-title">@Model.Theme</h2>

        <p class="text-muted">
            <i class="fas fa-calendar-alt me-2"></i>
            @Model.StartDate.ToString("MMMM d, yyyy")
        </p>

        <p class="text-muted">
            <i class="fas fa-map-marker-alt me-2"></i>
            @Model.Location
        </p>

        <p class="mt-4"><strong>Category:</strong> @Model.Category</p>

        <p class="lead mt-4">@Model.LongDescription</p>

        <div class="d-flex justify-content-between align-items-center mt-5">
    <span class="h4">$@Model.Price.ToString("0.00")</span>

    <form asp-controller="Tickets" asp-action="Buy" method="post" class="d-inline">
        <input type="hidden" name="eventId" value="@Model.Id" />
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-ticket-alt me-2"></i> Buy Ticket
        </button>
    </form>
</div>


        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit Event</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete Event</a>
        </div>
    </div>
</div>
