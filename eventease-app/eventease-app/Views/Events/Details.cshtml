@model eventease_app.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@* ===== WRAPPER TO CENTER & NARROW ===== *@
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            @* ====================================== *@

            <div class="card bg-spacegrey mb-5">
                <img src="@Url.Content($"~/img/{Model.HeroFileName}")"
                     class="card-img-top"
                     alt="@Model.Theme"
                     style="height:400px;object-fit:cover;" />
                <div class="card-body">
                    <h2 class="card-title">@Model.Theme</h2>

                    <p class="text-muted">
                        <i class="fas fa-calendar-alt me-2"></i>
                        @Model.StartDate.ToString("MMMM d, yyyy")
                    </p>

                    <p class="text-muted">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        @Model.Location
                    </p>

                    <p class="mt-4">
                        <strong>Category:</strong> @Model.Category
                    </p>

                    <p class="lead mt-4">
                        @Model.LongDescription
                    </p>

                    <div class="d-flex justify-content-between align-items-center mt-5">
                        <span class="h4">
                            $@Model.Price.ToString("0.00")
                        </span>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Transactions"
                               asp-action="Create"
                               asp-route-eventId="@Model.Id"
                               class="btn btn-primary">
                                <i class="fas fa-ticket-alt me-2"></i>
                                Buy Ticket
                            </a>
                        }
                        else
                        {
                            <a asp-area=""
                               asp-controller="Auth"
                               asp-action="Login"
                               class="btn btn-secondary">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Log in to purchase
                            </a>
                        }
                    </div>

                    @* Only Admins or Organizers can edit/delete *@
                    @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
                    {
                        <div class="mt-4">
                            <a asp-action="Edit"
                               asp-route-id="@Model.Id"
                               class="btn btn-warning me-2">
                                Edit Event
                            </a>
                            <a asp-action="Delete"
                               asp-route-id="@Model.Id"
                               class="btn btn-danger">
                                Delete Event
                            </a>
                        </div>
                    }
                </div>
            </div>

            @* ===== CLOSE WRAPPER ===== *@
        </div>
    </div>
</div>
@* ========================== *@
