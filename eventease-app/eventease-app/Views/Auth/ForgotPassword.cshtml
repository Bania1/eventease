@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">
            <h2 class="text-center mb-4">Forgot Password</h2>

            @* Mensajes de validación y éxito *@
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["SuccessMessage"]
                </div>
            }
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <form asp-action="ForgotPassword" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" placeholder="Enter your account email" />
                </div>

                <div class="mb-3">
                    <label for="newPassword" class="form-label">New Password</label>
                    <input type="password" name="newPassword" class="form-control" placeholder="Choose a new password" />
                </div>

                <button type="submit" class="btn btn-warning w-100">
                    <i class="fas fa-key"></i> Reset Password
                </button>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Login" asp-controller="Auth">Back to Login</a>
            </div>
        </div>
    </div>
</div>

